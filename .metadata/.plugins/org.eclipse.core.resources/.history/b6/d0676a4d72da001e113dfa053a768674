$('#confirmacaoExclusaoModal').on('show.bs.modal', function(event) {
	//pegando o botão e quem desparou o evento
	var button = $(event.relatedTarget);
	
	var codigoTitulo = button.data('codigo'); //recupera os atributos do tipo data do form, no caso o codigo do titulo
	
	var modal = $(this); //pegando o objet jquery
	
	var form = modal.find('form');
	
	var action = form.attr('action'); //isso seria o action do form, isto é, "<form action="/titulos" method="POST">" do DialogoConfirmacaoExclusao.html
	if (!action.endsWith('/')) {
		action += '/'; //para adicionar '/' após o nome da action do form = "/titulos/..."
	} 
	form.attr('action', action + codigoTitulo);
	
	//alert(codigoTitulo);
});